project Mozzoni is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Builder is
      for Executable ("main.adb") use "mozzonid";
   end Builder;

   package Compiler is
      for Switches ("ada") use ("-gnato", "-gnat12", "-gnatf", "-O3", "-fstack-check");
   end Compiler;

end Mozzoni;

